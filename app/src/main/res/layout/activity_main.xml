<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".MainActivity">

  <LinearLayout
    android:id="@+id/linear_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    android:paddingVertical="12dp"
    android:background="@color/purple"
    >

    <ImageView
      android:layout_width="0dp"
      app:tint="@color/white"
      android:layout_height="40dp"
      android:layout_weight="1"
      android:src="@drawable/ic_all_inclusive"
      />

    <ImageView
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:layout_weight="1"
      android:src="@drawable/ic_happy" />

    <ImageView
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:layout_weight="1"
      android:src="@drawable/ic_sunny" />

  </LinearLayout>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/cabin"
    android:text="@string/lets_begin"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/linear_menu"
    android:layout_marginTop="32dp"
    android:textColor="@color/black"
    android:textSize="16sp"
    />

  <TextView
    android:id="@+id/text_phrase"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:fontFamily="@font/cabin"
    android:text="@string/app_name"
    android:textSize="22sp"
    android:textColor="@color/black"
    android:padding="16dp"
    android:gravity="center"
    />

  <View
    android:layout_width="128dp"
    android:layout_height="3dp"
    android:layout_below="@+id/text_phrase"
    android:layout_centerHorizontal="true"
    android:elevation="5dp"
    android:background="@color/purple_500" />

  <Button
    android:id="@+id/new_phrase"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="32dp"
    android:backgroundTint="@color/dark_purple"
    android:fontFamily="@font/cabin"
    android:textAllCaps="true"
    android:paddingHorizontal="32dp"
    android:text="@string/new_phrase" />

</RelativeLayout>